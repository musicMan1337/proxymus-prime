# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379 # Only exposed during tests
# 1G is about 10k concurrent sessions at 50KB each
REDIS_MEMORY_LIMIT=1G
REDIS_CPU_LIMIT=1.0

# Proxy Configuration
HTTP_PORT=80
HTTPS_PORT=443
PROXY_SERVER_NAME=_
# high traffic (10k+ RPS) consider 1G and 2.0 cores
PROXY_MEMORY_LIMIT=512M
PROXY_CPU_LIMIT=1.0

# Backend Test Ports (for test mode)
BACKEND1_PORT=8081
BACKEND2_PORT=8082
BACKEND3_PORT=8083

# Security Settings (experimental)
RATE_LIMIT_PER_IP=10
RATE_LIMIT_BURST=20

# Keepalived (experimental)
KEEPALIVED_VIP=192.168.1.100
KEEPALIVED_INTERFACE=eth0
KEEPALIVED_PASSWORD=your_vrrp_password
